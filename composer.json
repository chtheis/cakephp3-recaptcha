{
    "name": "giginc/cakephp3-recaptcha",
    "description": "Recaptcha for CakePHP 3",
    "license": "MIT",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "cakephp-plugin",
        "google",
        "recaptcha"
    ],
    "homepage": "https://github.com/giginc/cakephp3-recaptcha",
    "require": {
        "php": ">=5.6",
        "composer-plugin-api": "^1.0 || ^2.0",
        "cakephp/cakephp": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "cakephp/cakephp-codesniffer": "^4.0"
    },
    "authors": [
        {
            "name": "kgws",
            "email": "kagawa@giginc.co.jp"
        }
    ],
    "autoload": {
        "psr-4": {
            "Recaptcha\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recaptcha\\Test\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "cs-fix": "phpcbf --standard=vendor/cakephp/cakephp-codesniffer/CakePHP src/ tests/",
        "test": "phpunit --stderr"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
